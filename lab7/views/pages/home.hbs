<!--loads the home page-->
<div class="Home page">
  <h2 class="text-center">Welcome, {{first_name}}!</h2>
  <p class="text-center">Here are your details:</p>

  <table class="please work">
    <tbody>
      <tr>
        <th>Username</th>
        <td>{{username}}</td>
      </tr>
      <tr>
        <th>First Name</th>
        <td>{{first_name}}</td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td>{{last_name}}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{email}}</td>
      </tr>
      <tr>
        <th>Year</th>
        <td>{{year}}</td>
      </tr>
      <tr>
        <th>Major</th>
        <td>{{major}}</td>
      </tr>
      <tr>
        <th>Degree</th>
        <td>{{degree}}</td>
      </tr>
    </tbody>
  </table>
</div>